        // الكشف عن لغة المتصفح التلقائية
        const userLang = navigator.language || navigator.userLanguage;
        const defaultLang = userLang.startsWith('ar') ? 'ar' : 'en';
        
        // عناصر الترجمة
        const langElements = document.querySelectorAll('.lang');
        const langButtons = document.querySelectorAll('.lang-btn');
        
        // تطبيق الترجمة
        function applyLanguage(lang) {
            // تحديث النصوص
            langElements.forEach(element => {
                const key = element.getAttribute('data-key');
                if (translations[lang][key]) {
                    element.textContent = translations[lang][key];
                }
            });
            
            // تحديد الزر النشط
            langButtons.forEach(btn => {
                if (btn.getAttribute('data-lang') === lang) {
                    btn.classList.add('active');
                    document.documentElement.setAttribute('dir', lang === 'ar' ? 'rtl' : 'ltr');
                    document.documentElement.setAttribute('lang', lang);
                } else {
                    btn.classList.remove('active');
                }
            });
            
            // تحديث نص عدد البطاقات
            updateCardsText();
        }
        
        // أحداث أزرار تغيير اللغة
        langButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const lang = btn.getAttribute('data-lang');
                applyLanguage(lang);
            });
        });
        
        // تطبيق اللغة الافتراضية عند التحميل
        document.addEventListener('DOMContentLoaded', () => {
            applyLanguage(defaultLang);
        });
        
        // ==============================================
        // نظام تتبع البطاقات
        // ==============================================
        let viewedCards = 0;
        const totalCards = 7;
        const progressBar = document.getElementById('progressBar');
        const cardsCountElement = document.getElementById('cardsCount');
        const cardItems = document.querySelectorAll('.card-item');
        
        // تحديث نص عدد البطاقات
        function updateCardsText() {
            const currentLang = document.querySelector('.lang-btn.active').getAttribute('data-lang');
            cardsCountElement.textContent = ` ${viewedCards} `;
            
            if (currentLang === 'ar') {
                document.querySelector('[data-key="cardsCount"]').innerHTML = `لقد اطلعت على <span id="cardsCount">${viewedCards}</span> من البطاقات`;
            } else {
                document.querySelector('[data-key="cardsCount"]').innerHTML = `You've viewed <span id="cardsCount">${viewedCards}</span> cards`;
            }
            
            // تحديث شريط التقدم
            const progressPercentage = Math.min(100, (viewedCards / totalCards) * 100);
            progressBar.style.width = `${progressPercentage}%`;
            progressBar.textContent = `${viewedCards}/${totalCards}`;
        }
        
        // تتبع عرض البطاقات
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const card = entry.target;
                    if (!card.classList.contains('viewed')) {
                        card.classList.add('viewed');
                        viewedCards++;
                        updateCardsText();
                    }
                }
            });
        }, { threshold: 0.5 });
        
        // مراقبة جميع البطاقات
        cardItems.forEach(card => {
            observer.observe(card);
        });
        
        // أحداث أزرار "احصل عليها"
        const getButtons = document.querySelectorAll('.get-btn');
        getButtons.forEach(button => {
            button.addEventListener('click', function() {
                const currentLang = document.querySelector('.lang-btn.active').getAttribute('data-lang');
                const cardItem = this.closest('.card-item');
                const cardType = cardItem.getAttribute('data-card');
                
                alert(currentLang === 'ar' 
                    ? `سيتم توجيهك إلى صفحة التسجيل للحصول على بطاقة ${cardType}` 
                    : `You will be redirected to the registration page for ${cardType} card`);
                
                // في التطبيق الحقيقي، هنا سيتم التوجيه إلى صفحة التسجيل
                // window.location.href = `https://example.com/register?card=${cardType}`;
            });
        });
        
        // ==============================================
        // نظام المشاركة الفعلي
        // ==============================================
        const shareButtons = document.querySelectorAll('.share-btn');
        
        // وظائف المشاركة الفعلية على وسائل التواصل الاجتماعي
        shareButtons.forEach(button => {
            button.addEventListener('click', () => {
                const platform = button.getAttribute('data-platform');
